{
  "name": "electron-notification-shim",
  "version": "1.0.0",
  "description": "Get Notification API events in Electron main-process. Perfect for adding Notification toasters in Windows with node-notifier or other solution.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seriema/electron-notification-shim.git"
  },
  "author": {
    "name": "John-Philip Johansson",
    "email": "seriema@gmail.com",
    "url": "http://johansson.jp"
  },
  "scripts": {
    "start": "electron test.js",
    "test": "xo"
  },
  "files": [
    "index.js"
  ],
  "keywords": [
    "electron",
    "app",
    "dev",
    "notification",
    "notify",
    "toaster",
    "shim"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/seriema/electron-notification-shim/issues"
  },
  "homepage": "https://github.com/seriema/electron-notification-shim#readme",
  "devDependencies": {
    "electron-prebuilt": "^0.37.8",
    "xo": "^0.15.0"
  },
  "xo": {
    "esnext": true,
    "rules": {
      "linebreak-style": 0,
      "no-native-reassign": [
        2,
        {
          "exceptions": [
            "Notification"
          ]
        }
      ]
    },
    "globals": [
      "Notification:true"
    ],
    "envs": [
      "node",
      "browser"
    ]
  }
}
